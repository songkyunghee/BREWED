<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/textview_regular"
    android:paddingLeft="0dp"
    android:layout_marginRight="5dp">


    <ImageView
        android:id="@+id/menuImage"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/coffee1" />


    <TextView
        android:id="@+id/odlistTvName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="아메리카노 외 3잔"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_barun_gothic"
        />
    <TextView
        android:id="@+id/odlistTvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25,000원"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_barun_gothic"/>
    <TextView
        android:id="@+id/odlistTvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.05.06"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_barun_gothic"/>
    <TextView
        android:id="@+id/textCompleted"
        android:background="@drawable/button_regular"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/white"
        android:text="픽업완료"
        />
</LinearLayout>